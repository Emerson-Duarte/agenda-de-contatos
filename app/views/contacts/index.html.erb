<div class="body">
  <div class="container">
    <h1> Agenda de Contatos </h1>
    <table class="responsive-table">
      <thead>
      <tr class="table-header">
        <th class="col col-1">Id</th>
        <th class="col col-2">Nome</th>
        <th class="col col-3">Endereço</th>
        <th class="col col-4">Telefone</th>
        <th class="col col-5">Opções</th>
      </tr>
      </thead>

      <tbody>
      <% @contacts.each do |contact| %>
        <tr class="table-row">
          <td class="col col-1"><%= contact.id %></td>
          <td class="col col-2"><%= contact.name %></td>
          <td class="col col-3"><%= contact.address %></td>
          <td class="col col-4"><%= contact.phone %></td>
          <td class="col col-5">
            <%= link_to 'Excluir', contact, class: 'button', method: :delete, data: { confirm: 'Você tem certeza?'} %>
            <%= link_to 'Editar', edit_contact_path(contact), class: 'button' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div class="table-footer">
      <%= link_to 'Novo', new_contact_path, class: 'b-new' %>
    </div>


  </div>
</div>